<h1>Edit {{pirate.name}}</h1>
<form action='/pirates/{{id}}?_method=PUT' method="POST">
  <input type="text" name="name" placeholder="{{pirate.name}}"><br>
  <input type="text" name="birthplace" placeholder="{{pirate.birthplace}}"><br>
  <input type="number" name="death_year" placeholder="{{pirate.death_year}}"><br>
  <input type="text" name="base" placeholder="{{pirate.base}}"><br>
  <input type="text" name="nickname" placeholder="{{pirate.nickname}}"><br>
  <input type="submit" value="Edit Pirate">
</form>
